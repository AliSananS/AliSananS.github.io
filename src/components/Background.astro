---
const { class: className, opacity } = Astro.props;
---

<div class={`${className}`}>
  <!-- Background Pattern -->
  <div class={`absolute inset-0 opacity-${opacity || "100"}`}>
    <div
      class="absolute inset-0 h-full w-full bg-background bg-[linear-gradient(to_right,var(--color-divider)_1px,transparent_1px),linear-gradient(to_bottom,var(--color-divider)_1px,transparent_1px)] bg-[size:6rem_4rem]"
      style="box-shadow: inset 0 0 32px 48px var(--color-background);"
    >
    </div>
  </div>
  <slot />
</div>
